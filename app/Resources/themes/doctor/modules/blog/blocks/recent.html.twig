{% for item in items -%}
    <div class="row">
        <div class="{{ class_date }}">
            <div class="theme-title-large">
                <h3> {{ date(item.publicationDate)|localized_date('MMMM dd, yyyy') }}</h3>
            </div>
        </div>

        <div class="{{ class_item }}">
            {{ include('::blocks/themebox/' ~ grid ~ '.html.twig', {'item': item, 'module': 'blog'}) }}
        </div>
    </div>

    {% if not loop.last -%}
        <hr><br>
    {% endif -%}
{% endfor -%}

