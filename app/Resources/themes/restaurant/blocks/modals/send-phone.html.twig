<!-- Click to call -->
<div class="modal fade" id="modalSendPhone" tabindex="-1" role="dialog" aria-labelledby="modalSendPhone" aria-hidden="true" >
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">{{ "Send to Phone"|trans }} </h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="row">
                        <div class="col-sm-6 col-sm-offset-3">
                            <div class="form-group">
                                <label for="phone">{{ "Type your phone"|trans }} </label>
                                <input type="text" class="form-control" id="phone" placeholder="(000) 00000-0000" required>
                            </div>

                        </div>
                        <div class="col-sm-12 text-center">
                            <p>{{ "Send info about this listing to a phone."|trans }} </p>
                            <p class="small"><em>{{ "* Phone (000) 000-0000"|trans }} </em></p>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <p class="text-center">
                    <button type="submit" class="btn btn-success">{{ "Send to Phone"|trans }} </button>
                </p>
            </div>
        </div>
    </div>
</div>
