{#
/**
 * @file
 * Twitter Bootstrap v3 Sliding pagination control implementation.
 *
 * View that can be used with the pagination module
 * from the Twitter Bootstrap CSS Toolkit
 * http://getbootstrap.com/components/#pagination
 *
 * @author Pablo DÃ­ez <pablodip@gmail.com>
 * @author Jan Sorgalla <jsorgalla@gmail.com>
 * @author Artem Ponomarenko <imenem@inbox.ru>
 * @author Artem Zabelin <artjomzabelin@gmail.com>
 */
-#}

{% if pageCount > 1 -%}
    <ul class="pagination{{ small ? ' pagination-sm':'' }}">

        {% if previous is defined -%}
            <li>
                <a href="{{ path(route, query|merge({(pageParameterName): convertToPaginationFormat(previous) })) }}">&laquo;&nbsp;{{ 'Previous'|trans }}</a>
            </li>
        {% else -%}
            <li class="disabled">
                <span>&laquo;&nbsp;{{ 'Previous'|trans }}</span>
            </li>
        {% endif -%}

        {% if startPage > 1 -%}
            <li>
                <a href="{{ path(route, query|merge({(pageParameterName): convertToPaginationFormat(1)})) }}">1</a>
            </li>
            {% if startPage == 3 -%}
                <li>
                    <a href="{{ path(route, query|merge({(pageParameterName): convertToPaginationFormat(2)})) }}">2</a>
                </li>
            {% elseif startPage != 2 -%}
                <li class="disabled">
                    <span>&hellip;</span>
                </li>
            {% endif -%}
        {% endif -%}

        {% for page in pagesInRange -%}
            {% if page != current -%}
                <li>
                    <a href="{{ path(route, query|merge({(pageParameterName): convertToPaginationFormat(page)})) }}">{{ page }}</a>
                </li>
            {% else -%}
                <li class="active">
                    <span>{{ page }}</span>
                </li>
            {% endif -%}

        {% endfor -%}

        {% if pageCount > endPage -%}
            {% if pageCount > (endPage + 1) -%}
                {% if pageCount > (endPage + 2) -%}
                    <li class="disabled">
                        <span>&hellip;</span>
                    </li>
                {% else -%}
                    <li>
                        <a href="{{ path(route, query|merge({(pageParameterName): convertToPaginationFormat((pageCount - 1))})) }}">{{ pageCount -1 }}</a>
                    </li>
                {% endif -%}
            {% endif -%}
            <li>
                <a href="{{ path(route, query|merge({(pageParameterName): convertToPaginationFormat(pageCount)})) }}">{{ pageCount }}</a>
            </li>
        {% endif -%}

        {% if next is defined -%}
            <li>
                <a href="{{ path(route, query|merge({(pageParameterName): convertToPaginationFormat(next)})) }}">{{ 'Next'|trans }}&nbsp;&raquo;</a>
            </li>
        {% else -%}
            <li class="disabled">
                <span>{{ 'Next'|trans }}&nbsp;&raquo;</span>
            </li>
        {% endif -%}
    </ul>
{% endif -%}
