<form id="headerSearchForm" class="form">
    <div class="form-group flex-1">
        <label class="sr-only" for="searchKeyword">{{ "Keyword for search"|trans }} </label>

        <div class="input-group">
            <span class="input-group-addon" aria-hidden="true"><span id="searchKeywordIcon" class="fa fa-search"></span></span>
            <input id="searchKeyword" type="text" class="form-control input-lg" placeholder="{{ "Search anything..."|trans }}">
        </div>
    </div>
    <button id="headerSearchButton" type="submit" class="btn btn-success btn-block-sm">
        <span class="visible-sm"><i class="fa fa-search"></i></span><span class="hidden-sm">{{ "Search"|trans }} </span>
    </button>
</form>

